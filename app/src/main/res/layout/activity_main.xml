<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mystery0.trafficstatsdemo.MainActivity">

    <TextView
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/received"
        android:text="test"/>

    <com.mystery0.trafficstatsdemo.Traffic
        android:id="@+id/traffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:textAppearance="@android:style/TextAppearance.StatusBar.Icon"
        android:textSize="14sp"
        android:textStyle="normal"/>

    <com.mystery0.trafficstatsdemo.Mystery0Traffic
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/traffic"/>

</RelativeLayout>
